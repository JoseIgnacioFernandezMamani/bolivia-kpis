# ─── Database ────────────────────────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://bolivia:bolivia@postgres:5432/bolivia_kpis
DATABASE_SYNC_URL=postgresql+psycopg2://bolivia:bolivia@postgres:5432/bolivia_kpis
POSTGRES_USER=bolivia
POSTGRES_PASSWORD=bolivia
POSTGRES_DB=bolivia_kpis

# ─── Redis ────────────────────────────────────────────────────────────────────
REDIS_URL=redis://redis:6379/0

# ─── JWT / Auth ───────────────────────────────────────────────────────────────
JWT_SECRET_KEY=change-me-to-a-long-random-secret-key-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ─── Google OAuth2 ────────────────────────────────────────────────────────────
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# ─── Frontend ─────────────────────────────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_MAPLIBRE_STYLE=https://basemaps.cartocdn.com/gl/positron-gl-style/style.json

# ─── Scraper (Crawlee) ───────────────────────────────────────────────────────
SCRAPER_USER_AGENT=BoliviaKPIs/1.0 (+https://github.com/your-org/bolivia-kpis)

# Crawlee Configuration
MAX_REQUESTS_PER_CRAWL=0
MAX_REQUEST_RETRIES=3
MAX_CONCURRENCY=4
MIN_CONCURRENCY=1
REQUEST_HANDLER_TIMEOUT_SECS=60

# Browser Settings
HEADLESS=true
BROWSER_TYPE=chromium
NAVIGATION_TIMEOUT_MS=45000

# Storage
DATA_RAW_DIR=./data/raw
CRAWLEE_STORAGE_DIR=./data/storage

# ─── Environment ──────────────────────────────────────────────────────────────
ENVIRONMENT=development
LOG_LEVEL=INFO
